<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data_struct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaomai.myproject.activity.DataStructActivity">

    <include layout="@layout/my_app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_data_struct_1"
                style="@style/CommonButton"
                android:text="1.预备知识" />

            <Button
                android:id="@+id/bt_data_struct_2"
                style="@style/CommonButton"
                android:text="2.线性结构" />

            <Button
                android:id="@+id/bt_data_struct_3"
                style="@style/CommonButton"
                android:text="3.链表准备知识" />

            <Button
                android:id="@+id/bt_data_struct_4"
                style="@style/CommonButton"
                android:text="4.链表" />

            <Button
                android:id="@+id/bt_data_struct_5"
                style="@style/CommonButton"
                android:text="5.复习" />

            <Button
                android:id="@+id/bt_data_struct_6"
                style="@style/CommonButton"
                android:text="6.栈" />

            <Button
                android:id="@+id/bt_data_struct_7"
                style="@style/CommonButton"
                android:text="7.队列" />

            <Button
                android:id="@+id/bt_data_struct_8"
                style="@style/CommonButton"
                android:text="8.递归" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
