<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaomai.myproject.rxjava.RxJavaComplexActivity">

    <include layout="@layout/my_app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_rx_java_complex_print_array"
                style="@style/CommonButton"
                android:text="打印字符串数组" />

            <Button
                android:id="@+id/bt_rx_java_complex_get_image"
                style="@style/CommonButton"
                android:text="由id取得图片并显示" />

            <TextView
                android:id="@+id/tv_rx_java_complex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/iv_rx_java_complex"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
