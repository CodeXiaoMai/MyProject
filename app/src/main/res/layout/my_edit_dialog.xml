<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rectangle_gray"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_tooLarge"
        android:layout_marginBottom="@dimen/margin_tooLarge"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="@dimen/normalTextSize" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:background="@drawable/rounded_rectangle_white"
        android:padding="@dimen/padding_normal"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/normalTextSize" />

    <View
        android:layout_marginTop="@dimen/margin_tooLarge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_tiny"
        android:background="@color/lineGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_gray"
            android:text="@string/button_cancel"
            android:textColor="@color/textBlue"
            android:textSize="@dimen/normalTextSize" />

        <View
            android:id="@+id/divider"
            android:layout_width="@dimen/line_tiny"
            android:layout_height="match_parent"
            android:background="@color/lineGray" />

        <Button

            android:id="@+id/bt_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_gray"
            android:text="@string/button_ok"
            android:textColor="@color/textBlue"
            android:textSize="@dimen/normalTextSize" />
    </LinearLayout>
</LinearLayout>