<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_picasso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaomai.myproject.picasso.activity.PicassoActivity">

    <include layout="@layout/my_app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_picasso_base"
                style="@style/CommonButton"
                android:text="基本使用方法" />

            <Button
                android:id="@+id/bt_picasso_listview"
                style="@style/CommonButton"
                android:text="ListView中加载网络图片" />

            <Button
                android:id="@+id/bt_picasso_transformations"
                style="@style/CommonButton"
                android:text="图片变换" />

            <ImageView
                android:id="@+id/iv_picasso_result1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/iv_picasso_result2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/iv_picasso_result3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
