<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaomai.myproject.rxjava.RxJavaSchedulerActivity">

    <include layout="@layout/my_app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_rx_java_scheduler_text"
                style="@style/CommonButton"
                android:text="加载文字" />

            <Button
                android:id="@+id/bt_rx_java_scheduler_image"
                style="@style/CommonButton"
                android:text="加载图片" />

            <TextView
                android:id="@+id/tv_rx_java_scheduler"
                style="@style/CommonTextView"
                android:gravity="center" />

            <ImageView
                android:id="@+id/iv_rx_java_scheduler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
