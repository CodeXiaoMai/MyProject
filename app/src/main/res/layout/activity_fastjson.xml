<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/my_app_bar" />

    <Button
        android:id="@+id/bt_fastjson_tojava"
        style="@style/CommonButton"
        android:text="将JSON转换为Java对象" />

    <Button
        android:id="@+id/bt_fastjson_tojavalist"
        style="@style/CommonButton"
        android:text="将JSON数组转换为Java集合" />

    <Button
        android:id="@+id/bt_fastjson_javatojson"
        style="@style/CommonButton"
        android:text="将Java对象转换为Json对象" />

    <Button
        android:id="@+id/bt_fastjson_javatojsonarray"
        style="@style/CommonButton"
        android:text="将Java集合转换为JSON数组" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/CommonTextView"
                android:text="原始数据" />

            <TextView
                android:id="@+id/tv_fastjson_origin"
                style="@style/CommonTextView" />

            <TextView
                style="@style/CommonTextView"
                android:text="转换后的数据" />

            <TextView
                android:id="@+id/tv_fastjson_last"
                style="@style/CommonTextView" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>