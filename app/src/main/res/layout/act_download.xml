<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/my_app_bar" />

    <Button
        android:id="@+id/activity_download_bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/activity_download_pb"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_margin="@dimen/margin_normal"
            android:layout_weight="1"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/style_progressbar" />

        <TextView
            android:id="@+id/activity_download_tv_progress"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:textColor="@color/textBlue" />

    </LinearLayout>

</LinearLayout>