<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/my_app_bar"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_tooLarge"
        android:id="@+id/activity_nohttp_bt_jiami"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支持加密解密" />

    <Button
        android:id="@+id/activity_nohttp_bt_image"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="图片加载"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_nohttp_bt_upload"
        android:layout_width="wrap_content"
        android:text="文件上传"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_nohttp_bt_download"
        android:text="文件下载"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_nohttp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>