<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaomai.myproject.rxjava.RxJavaFlatActivity">

    <include layout="@layout/my_app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_rx_java_flat_map"
                style="@style/CommonButton"
                android:text="map的使用" />

            <Button
                android:id="@+id/bt_rx_java_flat_flatMap"
                style="@style/CommonButton"
                android:text="flatMap的使用" />

            <Button
                android:id="@+id/bt_rx_java_lift"
                style="@style/CommonButton"
                android:text="RxJava+Retrofit的使用" />

            <TextView
                android:id="@+id/tv_rx_java_flat"
                style="@style/CommonTextView"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/iv_rx_java_flat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
